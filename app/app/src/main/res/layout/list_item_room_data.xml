<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <TextView
      android:id="@+id/room_data_list_detail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="2dp"
      android:paddingEnd="4dp"
      android:textColor="#000000"
      android:textSize="12sp"
      tools:text="Detail"
	  android:layout_toRightOf="@+id/room_data_list_title"
      android:layout_marginRight="2dp"
      android:paddingRight="4dp" />

  <RelativeLayout
      android:id="@+id/room_data_list_text_layout"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_centerVertical="true"
	  android:layout_alignParentLeft="true"
      android:layout_toStartOf="@id/room_data_list_detail"
      android:layout_toLeftOf="@id/room_data_list_detail">

    <TextView
        android:id="@+id/room_data_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:textSize="18sp"
        tools:text="Title"
        android:gravity="left"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
        />

  </RelativeLayout>
</RelativeLayout>
